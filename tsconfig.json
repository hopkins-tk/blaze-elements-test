{
  "compilerOptions": {
    "module": "es2015",
    "target": "es5",
    "noImplicitAny": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitHelpers": true,
    // with this __extends cannot be overriden
    "importHelpers": true,
    "moduleResolution": "node",
    "outDir": "ts-output",
    "rootDir": "./",
    "jsx": "react",
    "jsxFactory": "h",
    "pretty": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "typeRoots": [
      "node_modules/@types",
      "manual_definitions"
    ],
    "types": [
      "mocha",
      "sinon-chai"
    ],
    "lib": [
      "dom",
      "es2015"
    ]
  },
  "exclude": [
    "node_modules",
    "packages/*/node_modules"
  ]
}
